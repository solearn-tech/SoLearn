# Application
NODE_ENV=development
PORT=3000
API_URL=http://localhost:8000
CORS_ORIGIN=http://localhost:3000

# Database
MONGODB_URI=mongodb://localhost:27017/solearn
REDIS_URL=redis://localhost:6379

# JWT Authentication
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRES_IN=7d

# Solana
SOLANA_NETWORK=devnet
SOLANA_RPC_URL=https://api.devnet.solana.com
PROGRAM_ID=your_program_id_here
TOKEN_MINT=your_token_mint_address_here

# Admin
ADMIN_WALLET_ADDRESS=your_admin_wallet_address

# Email
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your_smtp_username
SMTP_PASSWORD=your_smtp_password
EMAIL_FROM=noreply@solearn.io

# Firebase (for notifications)
FIREBASE_API_KEY=your_firebase_api_key
FIREBASE_AUTH_DOMAIN=your_firebase_auth_domain
FIREBASE_PROJECT_ID=your_firebase_project_id
FIREBASE_STORAGE_BUCKET=your_firebase_storage_bucket
FIREBASE_MESSAGING_SENDER_ID=your_firebase_messaging_sender_id
FIREBASE_APP_ID=your_firebase_app_id

# OpenAI API (for AI features)
OPENAI_API_KEY=your_openai_api_key

# Analytics
GOOGLE_ANALYTICS_ID=your_google_analytics_id

# AWS S3 (for asset storage)
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_REGION=us-east-1
AWS_BUCKET_NAME=solearn-assets

# Arweave (for on-chain storage)
ARWEAVE_KEY_FILE=path_to_arweave_key_file
ARWEAVE_KEY=your_arweave_key

# Debug
DEBUG=solearn:*
LOG_LEVEL=info 